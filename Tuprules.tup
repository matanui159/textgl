include config.tup

NATIVE = posix
ifeq (@(TUP_PLATFORM),win32)
	NATIVE = win32
endif

BIN_EXT =
LIB_EXT = .so
ifeq ($(NATIVE),win32)
	BIN_EXT = .exe
	LIB_EXT = .dll
endif

CC_FLAGS += -Werror -Wall -Wextra -Wpedantic
CC_FLAGS += -std=c11

ifeq ($(RELEASE),y)
	CC_FLAGS += -flto -O3
	LD_FLAGS += -flto -O3 -s
	ifeq ($(NATIVE),win32)
		LD_FLAGS += -static-libgcc
	endif
else
	CC_FLAGS += -g
endif

!CC = |> ^ CC %f^ gcc -c %f -o %o $(CC_FLAGS) |>
!LD = |> ^ LD %o^ gcc %f -o %o $(LD_FLAGS) |>